<div class="row">
    <div class="twelve columns box">
        <h2>
            Phone Bill Records:
        </h2>

        <table>
            {{#each billArray}}
            <tr>
                <td>Type:</td>
                <td>{{Type}}</td>
                <td>Price:</td>
                <td>R{{Cost}}</td>
                <td>Timestamp:</td>
                <td>{{updatedDate}} : {{TimeStamp}} </td>
            </tr>
            {{/each}}
        </table>

        <form action="/" method="GET">
            <button class="button-primary" type="submit" name="button">Back</button>
        </form>

    </div>
</div>