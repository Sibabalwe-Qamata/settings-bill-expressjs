<div class="row">

  <div class="six columns">
    <h5>Bill type</h5>



    <form class="" action="/action" method="post">
      <label class="">
        <input type="radio" name="billItemTypeWithSettings" class="billItemTypeWithSettings" value="call">
        <span class="label-body">Call</span>
      </label>
      <labzel class="">
        <input type="radio" name="billItemTypeWithSettings" class="billItemTypeWithSettings" value="sms">
        <span class="label-body">SMS</span>
        </label>


        <button class="button-primary" type="submit" name="button">Add</button>

    </form>

    <h5>Totals</h5>
    <table>
      <tr>
        <td>
          <a href="/actions/call">Call total</a>
        </td>
        <td>R
          <span class="callTotalSettings">{{prices.callPrice}}</span>
        </td>
      </tr>
      <tr>
        <td>
          <a href="/actions/sms">SMS total</a>
        </td>
        <td>R
          <span class="smsTotalSettings">{{prices.smsPrice}}</span>
        </td>
      </tr>
      <tr>
        <td>
          <a href="/actions">Total</a>
        </td>
        <td> R
          <span class="totalSettings {{prices.color}}">{{prices.totalPrice}}</span>
        </td>
      </tr>
    </table>
  </div>
  <div class="six columns">
    <h5>Settings</h5>

    <form class="" action="/settings" method="post">
      <input type="text" name="smsCost" placeholder="enter sms cost">
      <input type="text" name="callCost" placeholder="enter call cost">
      <input type="text" name="warningLevel" placeholder="enter warning level">
      <input type="text" name="criticalLevel" placeholder="enter critical level">
      <input type="submit">
    </form>
  </div>
</div>
</div>